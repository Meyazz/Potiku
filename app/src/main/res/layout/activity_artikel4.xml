<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Artikel4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/judul4"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="5sp"
            android:textSize="20dp"
            android:text="7 Hal Ini Harusnya Tidak Dilakukan Ketika Tubuh sedang Sakit!" />

        <TextView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/judul4"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:fontFamily="@font/bebas"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:gravity="bottom"

            android:background="@drawable/img4"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img4"
            android:lineSpacingExtra="5sp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text="Ketika sakit, tubuh terasa tak enak sehingga sulit melakukan apa-apa. Meski beberapa di antara kita mungkin sudah menyadari apa yang bolah dan tak boleh dilakukan saat sakit, beberapa yang lain perlu diingatkan untuk tidak melakukan hal tersebut. Ini sekian hal yang harusnya tak dilakukan ketika sakit." />

        <Button
            android:id="@+id/open_location_button"
            android:layout_width="match_parent"
            android:background="@drawable/custom_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_below="@id/txt4"
            android:onClick="openWeb"
            android:text="Open Website"/>




    </RelativeLayout>

</ScrollView>